@model ProjectCommand.HandleInvitationRespose

<form method="post"
      asp-controller="Projects"
      asp-action="HandleInvitationRespose"
      asp-route-projectId="@Model.ProjectId"
      class="btn-group btn-group-sm"
      role="group"
      aria-label="Actiuni">
    <input asp-for="ProjectId" value="@Model.ProjectId" type="hidden"/>

    <button type="submit" name="Intent" value="reject" class="btn btn-danger">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-ban" viewBox="0 0 16 16">
            <path d="M15 8a6.97 6.97 0 0 0-1.71-4.584l-9.874 9.875A7 7 0 0 0 15 8M2.71 12.584l9.874-9.875a7 7 0 0 0-9.874 9.874ZM16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0"/>
        </svg>
    </button>
    <button type="submit" name="Intent" value="accept" class="btn btn-success">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
            <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z"/>
        </svg>
    </button>
</form>