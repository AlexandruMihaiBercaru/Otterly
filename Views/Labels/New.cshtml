@model LabelCommand.Create

@{
    Layout = "_Layout";
}

<h2 class="text-center mt-5">Add a label</h2>

<br />


<div class="container mt-5">
    <form method="post" asp-controller="Labels" asp-action="New">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="@Model.Name" class="form-label">Name</label>
            <input asp-for="@Model.Name" class="form-control" placeholder="Add a new label..." />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Color" class="form-label">Choose a Color:</label>
            <input asp-for="@Model.Color" type="color" class="form-control form-control-color" id="exampleColorInput"  title="Pick a color:">
            <span asp-validation-for="@Model.Color" class="text-danger"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <button class="btn btn-outline-success" type="submit">Add</button>
    </form>
</div>

