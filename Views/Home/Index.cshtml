@{
    ViewData["Title"] = "Home Page";
}

<main>
    <section class="py-5 text-center">
        <div class="container">
            <h2 class="display-5">Simplify Your Workflow</h2>
            <p class="lead">Proj is your go-to task management solution, designed to help you organize and collaborate effortlessly.</p>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg">Get Started for Free</a>
        </div>
    </section>

    <section id="features" class="py-5">
        <div class="container text-center">
            <h3 class="mb-4">Features</h3>
            <div class="row">
                <div class="col-md-4">
                    <div class="card border-0">
                        <div class="card-body">
                            <h5 class="card-title">Intuitive Design</h5>
                            <p class="card-text">Easily navigate and manage your tasks with our user-friendly interface.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0">
                        <div class="card-body">
                            <h5 class="card-title">Team Collaboration</h5>
                            <p class="card-text">Work together with your team and keep everyone on the same page.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0">
                        <div class="card-body">
                            <h5 class="card-title">Customizable Workflows</h5>
                            <p class="card-text">Tailor workflows to match your unique project needs.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="pricing" class="py-5">
        <div class="container text-center">
            <h3 class="mb-4">Pricing</h3>
            <div class="row">
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Free</h5>
                            <p class="card-text">Basic task management features for individuals.</p>
                            <p class="card-text">$0/month</p>
                            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary">Sign Up</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Pro</h5>
                            <p class="card-text">Advanced features and integrations for small teams.</p>
                            <p class="card-text">$10/month</p>
                            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">Sign Up</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Enterprise</h5>
                            <p class="card-text">Custom solutions for large organizations.</p>
                            <p class="card-text">Contact us for pricing</p>
                            <a href="#contact" class="btn btn-outline-primary">Contact Us</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="contact" class="py-5">
        <div class="container text-center">
            <h3 class="mb-4">Contact Us</h3>
            <p>Have questions or need assistance? Reach out to us.</p>
            <a href="mailto:support@taskflow.com" class="btn btn-outline-primary">Email Support</a>
        </div>
    </section>
</main>