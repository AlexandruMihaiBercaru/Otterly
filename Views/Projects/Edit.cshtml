@model ProjectCommand.Edit
@{
    Layout = "_Layout";
}

<form method="post" asp-controller="Projects" asp-action="Edit" asp-route-projectId="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="form-label">Project name</label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>

        <br/><br/>
    </div>

    <div class="form-group">
        <label asp-for="Summary" class="form-label">Short description</label>
        <input asp-for="Summary" class="form-control"/>
        <span asp-validation-for="Summary" class="text-danger"></span>

        <br/><br/>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <button class="btn btn-success" type="submit">Save changes</button>
</form>