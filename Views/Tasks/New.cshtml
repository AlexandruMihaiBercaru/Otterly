@model TaskCommand.Create

<h2 class="text-center mt-5">New task</h2>

<br/>

<div class="container mt-5">

    <form method="post" asp-action="New" asp-controller="Tasks">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="form-label">Name </label>
            <input asp-for="Name" class="form-control"/>

            <span asp-validation-for="Name" class="text-danger"></span>
            <br/>

            <vc:select-label project-id="@ViewBag.ProjectId" name="LabelId"></vc:select-label>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label">Description</label>
            <br/>
            <textarea asp-for="Description" class="form-control summernote"></textarea>

            <span asp-validation-for="Description" class="text-danger"></span>
            <br/>
        </div>

        <input type="hidden" asp-for="Status" name="Status" value="Not Started"/>

        <div class="form-group">
            <label asp-for="StartDate" class="form-label">Starting Date</label>
            <input type="datetime-local" asp-for="StartDate" name="StartDate" class="form-control"/>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndDate" class="form-label">Ending Date</label>
            <input type="datetime-local" asp-for="EndDate" name="EndDate" class="form-control"/>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MediaUrl" class="form-label">Add some media (a picture from the web, a youtube video...):</label>
            <input type="url" asp-for="MediaUrl" name="MediaUrl" class="form-control" placeholder="https://example.com"/>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <br/>
        <button class="btn btn-success" type="submit">Add Task</button>
    </form>

</div>