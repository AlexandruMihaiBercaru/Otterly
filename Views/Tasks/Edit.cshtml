@model TaskCommand.Edit


<h2 class="mt-5">Edit task</h2>

<br />

<div class="container mt-5">

    <form method="post" asp-action="Edit" asp-controller="Tasks" asp-route-id="@Model.Id">


        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="form-label">Name </label>
            <input asp-for="Name" class="form-control" />

            <span asp-validation-for="Name" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label">Description</label>
            <br />
            <textarea asp-for="Description" class="form-control summernote"></textarea>

            <span asp-validation-for="Description" class="text-danger"></span>
            <br />
        </div>

        <input type="hidden" asp-for="Status" name="Status" value="Not Started" />

        <div class="form-group">
            <label asp-for="StartDate" class="form-label">Starting Date</label>
            <input type="datetime-local" asp-for="StartDate" name="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndDate" class="form-label">Ending Date</label>
            <input type="datetime-local" asp-for="EndDate" name="EndDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MediaUrl" class="form-label">Add a link (to a picture, video or another page):</label>
            <input type="url" asp-for="MediaUrl" name="MediaUrl" class="form-control" placeholder="https://example.com" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <br />
        <button class="btn btn-success" type="submit">Save changes</button>
    </form>

</div>